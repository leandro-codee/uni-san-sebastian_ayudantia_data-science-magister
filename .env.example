# .env.example - Variables de entorno para desarrollo
# Copia este archivo como .env y ajusta los valores según tu configuración

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=datascience
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# URL completa de conexión (alternativa)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/datascience

# =============================================================================
# CONFIGURACIÓN DE QDRANT (BASE DE DATOS VECTORIAL)
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# URL completa de Qdrant
QDRANT_URL=http://localhost:6333

# =============================================================================
# CONFIGURACIÓN DE LA API FLASK
# =============================================================================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=true
HOST=0.0.0.0
PORT=4000

# Clave secreta para Flask (cambiar en producción)
SECRET_KEY=tu-clave-secreta-muy-segura-cambiar-en-produccion

# =============================================================================
# CONFIGURACIÓN DE JUPYTER
# =============================================================================
JUPYTER_TOKEN=datascience123
JUPYTER_PORT=8888
JUPYTER_ENABLE_LAB=yes

# =============================================================================
# CONFIGURACIÓN DE N8N
# =============================================================================
N8N_PORT=5678
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=n8npassword123
N8N_SECURE_COOKIE=false

# =============================================================================
# CONFIGURACIÓN PARA GOOGLE CLOUD PLATFORM
# =============================================================================
# Cambiar por tu PROJECT_ID real de Google Cloud
GCP_PROJECT_ID=tu-proyecto-id-google-cloud
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Registry de imágenes
DOCKER_REGISTRY=gcr.io
IMAGE_NAME=datascience-env-api

# =============================================================================
# CONFIGURACIÓN PARA PRODUCCIÓN (CLOUD RUN)
# =============================================================================
# IP externa de tu VM en Google Cloud (configurar después del despliegue)
VM_EXTERNAL_IP=0.0.0.0

# URLs para producción (se configuran automáticamente)
PROD_DATABASE_URL=postgresql://postgres:postgres@${VM_EXTERNAL_IP}:5432/datascience
PROD_QDRANT_URL=http://${VM_EXTERNAL_IP}:6333

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# CONFIGURACIÓN DE MODELOS DE ML
# =============================================================================
# Directorio donde se guardan los modelos entrenados
MODEL_PATH=./models/
MODEL_VERSION=1.0.0

# Configuración específica para el modelo de pathfinding
PATHFINDING_MODEL_PATH=./models/pathfinding_model.pkl
SANTIAGO_MAP_DATA=./data/santiago_graph.pkl

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Modo debug más verboso
DEBUG_MODE=true

# Recargar automáticamente la API en desarrollo
AUTO_RELOAD=true

# Configuración de CORS para desarrollo
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8888

# =============================================================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# =============================================================================
# Si usas servicios de monitoreo como Prometheus, Grafana, etc.
MONITORING_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# =============================================================================
# VARIABLES ESPECÍFICAS DEL PROYECTO PATHFINDING
# =============================================================================
# Configuración para el análisis de rutas en Santiago
SANTIAGO_CENTER_LAT=-33.4569
SANTIAGO_CENTER_LON=-70.6483

# Configuración de OpenStreetMap
OSM_PLACE_NAME="Provincia de Santiago, Chile"
OSM_NETWORK_TYPE=drive

# Configuración de algoritmos de pathfinding
DEFAULT_ALGORITHM=dijkstra
ENABLE_ASTAR=true
ENABLE_VISUALIZATION=true

# =============================================================================
# NOTAS DE USO
# =============================================================================
# 
# 1. DESARROLLO LOCAL:
#    - Copia este archivo como .env
#    - Los valores por defecto funcionan para desarrollo local
#    - No cambies las credenciales de desarrollo
#
# 2. PRODUCCIÓN:
#    - Cambia todas las contraseñas
#    - Actualiza VM_EXTERNAL_IP con la IP real de tu VM
#    - Configura GCP_PROJECT_ID con tu proyecto real
#    - Usa secretos seguros para SECRET_KEY
#
# 3. GOOGLE CLOUD:
#    - Las variables PROD_* se usan automáticamente en Cloud Run
#    - Configura las variables de entorno en Cloud Run Console
#    - No incluyas credenciales sensibles en el código
#
# 4. SEGURIDAD:
#    - NUNCA subas el archivo .env al repositorio
#    - Usa secretos de Google Cloud para información sensible
#    - Cambia contraseñas por defecto en producción
#
# =============================================================================